{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Public Transport Accessibility in Melbourne (Stops by Hub, 2025)",
    "subtitle": "Base map: Victoria boundary • Idiom: proportional symbol map • Projection: Mercator",
    "anchor": "start"
  },
  "config": {
    "background": "white",
    "view": { "stroke": "transparent" },
    "legend": { "title": "Stops (count)" }
  },
  "projection": {
    "type": "mercator",
    "center": [145.0, -37.85],
    "scale": 12000
  },
  "width": 960,
  "height": 600,
  "layer": [
    {
      "data": { "graticule": { "step": [2, 2] } },
      "mark": {
        "type": "geoshape",
        "stroke": "#d9d9d9",
        "strokeWidth": 0.5
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/tonywr71/GeoJson-Data/master/australia-states.geojson",
        "format": { "type": "geojson" }
      },
      "transform": [
        {
          "calculate": "datum.STATE_NAME || datum.name || datum.NAME",
          "as": "stateName"
        },
        { "filter": "datum.stateName == 'Victoria'" }
      ],
      "mark": {
        "type": "geoshape",
        "fill": "#f0f4f8",
        "stroke": "#666",
        "strokeWidth": 1
      }
    },
    {
      "data": { "url": "melb_stops.csv" },
      "mark": {
        "type": "circle",
        "opacity": 0.85,
        "stroke": "black",
        "strokeWidth": 0.2
      },
      "encoding": {
        "longitude": { "field": "lon", "type": "quantitative" },
        "latitude": { "field": "lat", "type": "quantitative" },
        "size": {
          "field": "stops",
          "type": "quantitative",
          "scale": { "range": [30, 1200] },
          "legend": { "orient": "right" }
        },
        "color": {
          "field": "stops",
          "type": "quantitative",
          "scale": { "scheme": "blues" }
        },
        "tooltip": [
          { "field": "place", "type": "nominal", "title": "Location" },
          { "field": "stops", "type": "quantitative", "title": "Stops (count)" },
          { "field": "note", "type": "nominal", "title": "Notes" }
        ]
      }
    }
  ]
}
